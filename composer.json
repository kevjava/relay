{
    "name": "relay/relay",
    "description": "Relay - Lightweight PHP CMS for government content management",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "erusev/parsedown": "^1.7",
        "erusev/parsedown-extra": "^0.8"
    },
    "autoload": {
        "files": [
            "lib/auth.php",
            "lib/csrf.php",
            "lib/content.php",
            "lib/menu.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
